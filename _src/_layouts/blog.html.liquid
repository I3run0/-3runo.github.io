---
layout: default.html
---
{% for post in site.posts %}
  <article>
    <header>
      <h2><a href="{{ post.url }}">{{ post.title }}</a></h2>
    </header>
    <p>
      <time datetime="{{ post.date}}">
        {{ post.date | date_to_long_string: "ordinal" }}
      </time>
    </p>
    <p>{{ post.excerpt }}</p>
  </article>
{% endfor %}